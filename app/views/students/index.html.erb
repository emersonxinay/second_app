

<h1 class="m-5" >Students</h1>
<link href="https://stackpath.bootstrapcdn.com/bootswatch/3.4.1/cerulean/bootstrap.min.css" rel="stylesheet" integrity="sha384-S0cN63+vYrG1/kfcUhtXsKZfyE9azrjw5p+Q5yYU+Dzjg60sZUEYsIKIb5O/oaT3" crossorigin="anonymous">
<p id="notice"><%= notice %></p>
<table class="m-5">
  <thead>
    <tr>
      <th >Name</th>
      <th>Age</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.age %></td>
        <td><%= student.email %></td>
        <td><%= link_to 'Show', student , class:'btn btn-primary' %></td>
        <td><%= link_to 'Edit', edit_student_path(student), class:'btn btn-success' %></td>
        <td><%= link_to 'Destroy', student, class:'btn btn-danger' ,  method: :delete, data: { confirm: 'Are you sure?' }  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<a class="m-5" href="#"><%= link_to 'New Student', new_student_path %></a>
